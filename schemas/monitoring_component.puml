title Monitoring Service Component Diagram

top to bottom direction

!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Component.puml

Container_Boundary(WarmHouseSystem, "WarmHouse System") {
  Container(WebApp, "Monitoring Service", "Golang API", "Remote monitoring of houses")
  Container(Database, "Database", "PostgreSQL", "Stores user data and monitoring")
}

Container(WebApp, "Web Application", "Java, Spring") {
  Component(MonitoringController, "MonitoringController", "Manages monitoring")
  Component(ServiceLayer, "Service Layer", "Business logic")
  Component(RepositoryLayer, "Repository Layer", "Data access logic")
}

Rel(MonitoringController,ServiceLayer,"Calls business logic")
Rel(ServiceLayer,RepositoryLayer,"Reads/Writes data")
Rel(RepositoryLayer,Database,"Reads/Writes user data")

@enduml